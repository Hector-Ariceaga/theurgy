<div class="container">

  <div class="notice"> <%= flash[:message] %> </div>

  <h1> Treatments </h1>

  <ol>
    <% @treatments.each do |treatment| %>
      <li><%= treatment.name %> | <%= link_to 'Delete Treatment', treatment, method: :delete, data:{confirm: "Are you sure you want to destroy this treatment?"} %>
      </li>
    <% end %>
  </ol>

</div>