<h1>Welcome back, <%= @user.username %></h1>

<h2><%= clinic @user %></h2>

<h3><%= @user.name %>'s patients</h3>

<table>
  <% @user.patients.each do |patient|>
    <tr>
      <td><%= patient.name %></td>
      <td><%= link_to 'View Patient Details', [patient.user, patient]%>
      <td><%= link_to 'Delete patient', [patient.user, patient], method: :delete, data: {Are you sure you want to delete this patient?} %></td>
    </tr>
  <% end %>
</table>

