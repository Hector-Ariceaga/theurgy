<div>
  <% if @user.errors.any? %>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  <% end %>
</div>


<h1>Create a User</h1>

<%= form_for @user do |f| %>

  <div>
    <%= f.label :name, 'Name' %><br>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :username, 'Username' %><br>
    <%= f.text_field :username %>
  </div>

  <div>
    <%= f.label :clinic, 'Clinic(optional)' %><br>
    <%= f.text_field :clinic %>
  </div>

  <div>
    <%= f.label :admin, 'Check box if you are a system administrator' %><br>
    <%= f.check_box :admin %>
  </div>

  <div>
    <%= f.label :password, 'Password' %><br>
    <%= f.password_field :password %>
  </div>

  <%= f.submit 'Create Account', class: 'btn'%>
<% end %>
