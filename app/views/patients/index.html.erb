<h1><%= @user.name %>'s Patient List</h1>

<table>
  <% @patients.each do |patient| %>
    <tr>
      <td><%= patient.name %></td>
      <td><%= link_to 'View Patient Details', [patient.user, patient]%></td>
      <td><%= link_to 'Delete patient', [patient.user, patient], method: :delete, data: {confim: "Are you sure you want to delete this patient?"} %></td>
    </tr>
  <% end %>
</table>
