<%= form_for [patient.user, patient] do |f| %>
  <%= f.hidden_field :user_id %>

  <div>
    <%= f.label :name, "Name" %>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :dob, "DOB" %>
    <%= f.date_field :dob, value: :dob.try(:strftime,"%m/%d/%Y") %>
  </div>

  <div>
  <%= f.label :symptoms %>
  <%= f.collection_select :symptom_ids, Symptom.order('name COLLATE NOCASE ASC'), :id, :name, {include_blank: 'Remove All', include_hidden: false}, {multiple: true} %>
  </div>
  
  

  
  <div>
  <%= f.label :diagnoses %>
  <%= f.collection_select :diagnosis_ids, Diagnosis.order('name COLLATE NOCASE ASC'), :id, :name, {include_blank: 'Remove All', include_hidden: false}, {multiple: true} %>
  </div>

  <%= f.submit %>

<% end %>
